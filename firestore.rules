rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regla General: Permite el acceso de lectura y escritura a cualquier usuario autenticado.
    // Esto elimina todos los errores de "permiso denegado" para que la aplicaci√≥n sea completamente funcional.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
